# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
separator=false
markup=pango

# Battery indicator
#
# The battery instance defaults to 0.
[battery]
command=~/.config/i3/scripts/battery.sh
label=⚡
#instance=1
interval=30

[iface]
command=~/.config/i3/scripts/iface
LABEL=ip:
#IFACE=wlan0
#ADDRESS_FAMILY=inet6?
color=#a6d189
interval=10

[bandwidth]
command=~/.config/i3/scripts/bandwidth2
color=#ef9f76
interval=persist

{{- if eq .chezmoi.hostname "zenbook-endeavouros" }}
[ssid]
label=SSID:
command=echo "$(iwconfig wlan0 | grep ESSID | awk '{print $4}' | tr -d 'ESSID:"')"
color=#ef9f76
interval=5
{{- end }}

# Memory usage
#
# The type defaults to "mem" if the instance is not specified.
[memory]
label=
command=~/.config/i3/scripts/memory
color=#81c8be
interval=30

# Disk usage
#
# The directory defaults to $HOME if the instance is not specified.
# The script may be called with a optional argument to set the alert
# (defaults to 10 for 10%).
[disk]
label=
instance=/home/julien
command=~/.config/i3/scripts/disk
color=#81c8be
interval=30

[CPU-temperature]
label=CPU
command=~/.config/i3/scripts/temperature
color=#81c8be
interval=10

[cpu_usage]
label=
interval=10
command=~/.config/i3/scripts/cpu_usage
color=#81c8be
#min_width=CPU: 100.00%

# Volume indicator
[volume-pulseaudio]
label=Vol:
command=~/.config/i3/scripts/volume
color=#a6d189
instance=Master
interval=1

[pavucontrol]
full_text=
color=#a6d189
command=pavucontrol

[time]
label=
command=date '+%a %d %b %Y %H:%M:%S'
color=#e5c890
interval=1

[shutdown_menu]
full_text= 
command=~/.config/i3/scripts/shutdown_menu -p rofi -c;
color=#81c8be	
